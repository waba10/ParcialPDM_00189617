<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
              android:orientation="vertical"
             android:layout_height="match_parent"
             tools:context=".fragments.ControlGame">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"  android:orientation="horizontal" >


        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                      android:orientation="vertical" android:gravity="center">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/control_fecha" android:visibility="invisible"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/control_local"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/marcador_local" android:layout_margin="10dp" android:text="0" />

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="1 Punto" android:id="@+id/mas1_local" android:layout_margin="7dp" android:background="@color/colorPrimaryDark"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="2 Puntos" android:id="@+id/mas2_local" android:layout_margin="7dp" android:background="@color/colorPrimaryDark"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="3 Puntos" android:id="@+id/mas3_local" android:layout_margin="7dp" android:background="@color/colorPrimaryDark"/>

        </LinearLayout>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                      android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/control_hora" android:visibility="invisible"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/control_visitante"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/marcador_visitante" android:layout_margin="10dp" android:text="0" />

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="1 Punto" android:id="@+id/mas1_visitante" android:layout_margin="7dp" android:background="@color/colorPrimaryDark"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="2 Puntos" android:id="@+id/mas2_visitante" android:layout_margin="7dp" android:background="@color/colorPrimaryDark"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="3 Puntos" android:id="@+id/mas3_visitante" android:layout_margin="7dp" android:background="@color/colorPrimaryDark"/>
        </LinearLayout>



    </LinearLayout>


    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Terminar Juego" android:id="@+id/end" android:layout_gravity="center"/>

</LinearLayout>